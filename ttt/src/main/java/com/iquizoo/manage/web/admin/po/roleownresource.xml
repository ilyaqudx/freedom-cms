<mapper namespace="Roleownresource">

	<select id="getRoleownresourceList"  resultType="Roleownresource">
		SELECT * FROM Roleownresource
	</select>

	<select id="getRoleownresourceListByRoleId" resultType="Roleownresource" parameterType="Integer">
		SELECT * FROM Roleownresource WHERE roleId=#{roleId}
	</select>

	<insert id="addRoleownresource" parameterType="Roleownresource">
		INSERT INTO Roleownresource(
		roleId,
		resourceId
		)VALUES(
		#{roleId},
		#{resourceId}
		)
	</insert>

	<update id="updateRoleownresource" parameterType="Roleownresource">
		UPDATE Roleownresource
		SET 
		roleId = #{roleId},
		resourceId = #{resourceId}
		WHERE 
		resourceId=#{resourceId}
		and roleId=#{roleId}
		
	</update>

	<delete id="deleteRoleownresourceByRoleId" parameterType="Integer">
	    DELETE FROM Roleownresource 
		WHERE roleId=#{roleId}
	</delete>

</mapper>