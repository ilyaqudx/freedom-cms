<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BankAccount">
  
  	<insert id="addBankAccount" parameterType="com.iquizoo.manage.web.bank.po.BankAccount">
  		<selectKey keyColumn="id" keyProperty="id" resultType="Integer">
			SELECT LAST_INSERT_ID()
		</selectKey>
		
		INSERT INTO BankAccount(
		id
		<if test="userId != null">
			,userId
		</if>
		<if test="bankId != null">
			,bankId
		</if>
		<if test="bankName != null">
			,bankName
		</if>
		<if test="account != null">
			,account
		</if>
		<if test="accountName != null">
			,accountName
		</if>
		<if test="bankBranch != null">
			,bankBranch
		</if>
		<if test="bankAddress != null">
			,bankAddress
		</if>
		<if test="createTime != null">
			,createTime
		</if>
		)VALUES(
		#{id}
		<if test="userId != null">
			,#{userId}
		</if>
		<if test="bankId != null">
			,#{bankId}
		</if>
		<if test="bankName != null">
			,#{bankName}
		</if>
		<if test="account != null">
			,#{account}
		</if>
		<if test="accountName != null">
			,#{accountName}
		</if>
		<if test="bankBranch != null">
			,#{bankBranch}
		</if>
		<if test="bankAddress != null">
			,#{bankAddress}
		</if>
		<if test="createTime != null">
			,#{createTime}
		</if>
		)
  	</insert>
  
	<select id="getAccountBankById" resultType="com.iquizoo.manage.web.bank.po.BankAccount" parameterType="Integer">
		SELECT * FROM BankAccount WHERE id=#{id}
	</select>
	
	<select id="listBankAccountByUserId" resultType="com.iquizoo.manage.web.bank.po.BankAccount" parameterType="Integer">
		SELECT * FROM BankAccount WHERE userId=#{userId}
	</select>
</mapper>