<mapper namespace="LineUser">

	<select id="getByParams" parameterType="LineUser" resultType="LineUser">
		SELECT * FROM LineUser where 1 = 1
		<if test="classes != null">
		 and classes = #{classes}
		</if>
		<if test="grades != null">
		 and grades = #{grades}
		</if>
		<if test="schools != null">
		 and schools like '%${schools}%' 
		</if>
	</select>

	<select id="get" parameterType="int" resultType="LineUser">
	  select * from lineUser where userId = #{userId}
	</select>
	<select id="getSchools" resultType="String">
	 SELECT schools FROM LineUser GROUP BY schools
	</select>

</mapper>