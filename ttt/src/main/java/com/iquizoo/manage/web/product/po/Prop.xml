<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Prop">

       <select id="get" resultType="Prop" parameterType="Map">
			SELECT * FROM Prop 
			<if test="order != null">
			order by ${order}
		   </if>
		    limit #{start},#{length}
		</select>
		
		<select id="getCount" resultType="Integer" parameterType="Map">
			SELECT count(*) FROM Prop 
		</select>
		
		<insert id="insert" parameterType="Prop">
			<selectKey resultType="int" keyProperty="id">    
             	<![CDATA[SELECT @@IDENTITY AS ID ]]>   
       		</selectKey>
			INSERT INTO Prop(type,subType,name,image,description,random,petExp) 
			VALUES(#{type},#{subType},#{name},#{image},#{description},#{random},#{petExp})
		</insert>
		
		<select id="getById" parameterType="int" resultType="Prop">
			SELECT * FROM Prop WHERE id = #{id}
		</select>
		
		
		<update id="update" parameterType="Prop">
			UPDATE Prop SET  type = #{type}, 
			name = #{name},
			<if test="image != null">
			  image = #{image},
			</if> 
			description = #{description},
			random = #{random}, 
			petExp = #{petExp}
		    WHERE id = #{id}
		</update>
		
		<delete id="delete" parameterType="int">
			DELETE FROM Prop WHERE id = #{id}
		</delete>
		
		<select id="list" resultType="Prop">
			SELECT * FROM Prop 
		</select>
		
		
	
</mapper>